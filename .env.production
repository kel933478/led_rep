# Configuration de production pour rec-ledger.com
NODE_ENV=production
PORT=5000
DOMAIN=rec-ledger.com
HTTPS_ENABLED=true

# Base de données PostgreSQL
DATABASE_URL=postgresql://rec_ledger_user:your_secure_password@localhost:5432/rec_ledger

# Sécurité
SESSION_SECRET=your_very_strong_session_secret_change_this_in_production

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/rec-ledger.com.crt
SSL_KEY_PATH=/etc/ssl/private/rec-ledger.com.key

# Email (optionnel pour production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@rec-ledger.com

# API externe (optionnel)
COINAPI_IO_KEY=

# Monitoring
LOG_LEVEL=info
ENABLE_MONITORING=true